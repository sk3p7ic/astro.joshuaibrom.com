---
import MobileNavigation from "./MobileNavigation.svelte";

type LinkType = {
  href: string;
  title: string;
};

const links: LinkType[] = [
  { href: "/", title: "home" },
  { href: "/projects", title: "projects" },
  { href: "/about", title: "about" },
  { href: "/socials", title: "socials" },
];
---

<header
  class="py-2 px-4 md:px-8 lg:px-12 xl:px-24 fixed top-0 left-0 right-0 flex flex-row justify-between items-center md:items-end"
>
  <h1 class="brand"><a href="https://joshuaibrom.com">joshua ibrom</a></h1>
  <div class="block md:hidden relative">
    <MobileNavigation
      client:visible
      links={links}
      currentPage={Astro.url.pathname}
    />
  </div>
  <nav class="hidden md:flex flex-row gap-4 nav-item">
    {
      links.map((link) => (
        <a
          href={link.href}
          class={`nav-item ${
            link.href === Astro.url.pathname ? "text-cyan-400" : ""
          }`}
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</header>
