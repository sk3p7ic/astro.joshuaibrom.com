---
import MobileNavigation from "./MobileNavigation.svelte";

type LinkType = {
  href: string;
  title: string;
};

const links: LinkType[] = [
  { href: "/", title: "home" },
  { href: "/projects", title: "projects" },
  { href: "/about", title: "about" },
  { href: "/socials", title: "socials" },
];
---

<header
  class="py-2 px-4 md:px-8 lg:px-12 xl:px-24 flex flex-row justify-between items-center md:items-end"
>
  <h1 class="brand">joshua ibrom</h1>
  <div class="block md:hidden relative">
    <MobileNavigation client:visible links={links} />
  </div>
  <nav class="hidden md:flex flex-row gap-4 nav-item">
    {links.map((link) => <a href={link.href}>{link.title}</a>)}
  </nav>
</header>
