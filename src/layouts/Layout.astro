---
import "../styles/globals.css";
import BaseHeaderInfo from "./BaseHeaderInfo.astro";
import Navbar from "../components/Navbar/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHeaderInfo title={title} />
  <body class="min-h-screen flex flex-col">
    <Navbar />
    <div class="mt-16 px-2 md:px-8 lg:px-16 xl:px-32 flex-grow">
      <slot />
    </div>
    <footer
      class="mt-8 py-1 font-inter italic border-t border-t-zinc-400 flex flex-row justify-center"
    >
      Joshua Ibrom (sk3p7ic), {new Date().getFullYear()}
    </footer>
  </body>
</html>
