---
import "../styles/globals.css";
import BaseHeaderInfo from "./BaseHeaderInfo.astro";
import Navbar from "../components/Navbar/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <body>
    <BaseHeaderInfo title={title} />
    <Navbar />
    <div class="mt-16 px-2 md:px-8 lg:px-16 xl:px-32">
      <slot />
    </div>
  </body>
</html>
